<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:flow_wrapMode="aligned"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="50dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/cheaf"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:text="KVT Chef" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="80dp"
      >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >


            <SearchView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/greybackground" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:background="@drawable/greybackground">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/cheaf1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textCursorDrawable="@drawable/photo"
            android:text="Chef 1"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout

        android:layout_width="200dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/greybackground"
        >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:layout_gravity="top"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/cheaf3" />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textCursorDrawable="@drawable/photo"
            android:text="Chef 2"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_marginTop="450dp"
        android:background="@drawable/greybackground">
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:layout_gravity="top"
            android:layout_margin="10dp"
            android:background="@drawable/photo"
            app:srcCompat="@drawable/cheaf3" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textCursorDrawable="@drawable/photo"
            android:text="Chef 3"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="220dp"
        android:background="@drawable/greybackground">
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:layout_gravity="top"
            android:layout_margin="10dp"
            android:background="@drawable/photo"
            app:srcCompat="@drawable/cheaf2" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textCursorDrawable="@drawable/photo"
            android:text="Chef 4"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_marginTop="780dp"
        android:background="@drawable/greybackground">
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:layout_gravity="top"
            android:layout_margin="10dp"
            android:background="@drawable/photo"
            app:srcCompat="@drawable/cheaf3" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textCursorDrawable="@drawable/photo"
            android:text="Chef 5"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_marginTop="780dp"
        android:layout_marginLeft="220dp"
        android:background="@drawable/greybackground">
        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:layout_gravity="top"
            android:layout_margin="10dp"
            android:background="@drawable/photo"
            app:srcCompat="@drawable/cheaf2" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textCursorDrawable="@drawable/photo"
            android:text="Chef 6"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="bold"/>

    </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>